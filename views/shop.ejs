<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        html, body {
            height: 100%;
        }
        .main-content {
            flex: 1;
        }
        .icon-button {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #d1d5db; /* Light grey color */
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body class="bg-gray-100 flex flex-col">
    <header class="bg-white shadow-md">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <h1 class="text-2xl font-semibold">Shop</h1>
            <nav>
                <ul class="flex space-x-4">
                    <li><a href="/" class="text-gray-600 hover:text-gray-800">Home</a></li>
                    <li><a href="/cart" class="text-gray-600 hover:text-gray-800">Cart</a></li>
                    <% if (user && user.role === 'admin') { %>
                        <li><a href="/admin/create-product" class="text-gray-600 hover:text-gray-800">Create New Product</a></li>
                    <% } %>
                    <li><a href="/logout" class="text-gray-600 hover:text-gray-800">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="main-content container mx-auto px-4 py-8 flex flex-col">
        <div class="flex mb-6">
            <div class="w-1/4 pr-4">
                <h2 class="text-xl font-semibold mb-4">All Products</h2>
                <h2 class="text-xl font-semibold">Create New Product</h2>
            </div>
            <div class="w-3/4 relative">
                <% if (success && success.length > 0) { %>
                    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
                        <span class="inline-block mt-1 mb-1 text-white">
                            <%= success %>
                        </span>
                    </div>
                <% } %>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <% products.forEach(product => { %>
                        <div class="bg-white rounded-lg shadow-md overflow-hidden h-96 flex flex-col relative">
                            <img src="/path-to-your-image/<%= product.image %>" alt="<%= product.name %>" class="w-full h-60 object-cover">
                            <div class="p-4 flex flex-col flex-grow">
                                <div class="flex flex-col flex-grow">
                                    <h2 class="text-lg font-semibold"><%= product.name %></h2>
                                    <% if (typeof product.price === 'number') { %>
                                        <p class="text-gray-600 mt-2">$<%= product.price.toFixed(2) %></p>
                                    <% } else { %>
                                        <p class="text-gray-600 mt-2">Price not available</p>
                                    <% } %>
                                </div>
                                <div class="absolute bottom-4 right-4">
                                    <form action="/addtocart/<%= product._id %>" method="POST">
                                        <button type="submit" class="icon-button text-indigo-500 hover:text-indigo-600 focus:outline-none">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-gray-200 py-4 mt-auto">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 Shop. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
