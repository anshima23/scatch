<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Ensure main content fills the available space */
        .main-content {
            flex-grow: 1;
            overflow-x: hidden; /* Prevent horizontal scrolling */
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="flex">
        <!-- Sidebar -->
      
        <!-- Main content -->
        <div class="flex-1 p-4 main-content">
            <h1 class="text-3xl font-bold mb-8">Your Cart</h1>
            <div class="bg-white border border-gray-200 rounded-lg shadow-md p-4">
                <% if (cart.length === 0) { %>
                    <p class="text-center text-gray-500">Your cart is empty.</p>
                <% } else { %>
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-4 gap-4">
                        <% cart.forEach(product => { %>
                            <div class="bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden p-2">
                                <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-32 object-cover mb-2">
                                <div class="p-2">
                                    <h2 class="text-sm font-semibold mb-1"><%= product.name %></h2>
                                    <p class="text-gray-500 text-xs mb-2">$<%= product.price.toFixed(2) %></p>
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-800 text-xs">Quantity: <%= product.quantity %></span>
                                        <div class="flex items-center space-x-2">
                                            <!-- Only include the minus button if needed -->
                                            <button class="minus-btn bg-gray-200 text-gray-700 rounded-full p-1 hover:bg-gray-300 text-xs" data-item-id="<%= product._id %>">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Include your JavaScript here -->
    <script>
        document.querySelectorAll('.minus-btn').forEach(button => {
            button.addEventListener('click', () => {
                const itemId = button.dataset.itemId;
                // Handle decrease quantity logic here
                fetch(`/decreasequantity/${itemId}`, {
                    method: 'POST',
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload(); // Reload the page to update the cart
                    } else {
                        alert('Error decreasing item quantity');
                    }
                });
            });
        });
    </script>
</body>
</html>
