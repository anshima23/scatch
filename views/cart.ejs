<!-- views/cart.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="flex">
        <!-- Sidebar -->
        <div class="w-64 bg-white border-r border-gray-200 p-4">
            <!-- Sidebar content here -->
        </div>

        <!-- Main content -->
        <div class="flex-1 p-4">
            <h1 class="text-3xl font-bold mb-8">Your Cart</h1>
            <div class="bg-white border border-gray-200 rounded-lg shadow-md p-4">
                <% if (cart.length === 0) { %>
                    <p class="text-center text-gray-500">Your cart is empty.</p>
                <% } else { %>
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-4 gap-4">
                        <% cart.forEach(product => { %>
                            <div class="bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden p-2">
                                <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-32 object-cover mb-2">
                                <div class="p-2">
                                    <h2 class="text-sm font-semibold mb-1"><%= product.name %></h2>
                                    <p class="text-gray-500 text-xs mb-2">$<%= product.price.toFixed(2) %></p>
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-800 text-xs">Quantity: <%= product.quantity %></span>
                                        <button class="remove-btn bg-gray-200 text-gray-700 rounded-full p-1 hover:bg-gray-300 text-xs" data-item-id="<%= product._id %>">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 12H5"></path>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Include your JavaScript here -->
    <script>
        document.querySelectorAll('.remove-btn').forEach(button => {
            button.addEventListener('click', () => {
                const itemId = button.dataset.itemId;
                // Handle remove item logic here
                // e.g., send an AJAX request to update cart
            });
        });
    </script>
</body>
</html>
