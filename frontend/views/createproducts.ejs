<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Product</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 flex h-screen">

    <!-- Sidebar -->
    <div class="w-64 bg-white border-r border-gray-200 p-4 flex-shrink-0">
        <h2 class="text-xl font-semibold mb-4">All Products</h2>
        <h2 class="text-xl font-semibold">Create New Products</h2>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex items-center justify-center p-4">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-lg">
            <h1 class="text-3xl font-bold mb-4 text-center">Create New Product</h1>

            <h2 class="text-xl font-semibold mb-4">Product Details</h2>

            <!-- Form -->
            <form action="/products/create" method="POST" enctype="multipart/form-data">
                <!-- Product Image -->
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2">Product Image:</label>
                    <input type="file" name="productImage" class="block w-full border border-gray-300 rounded p-2">
                </div>

                <!-- Product Name and Price -->
                <div class="flex mb-4 space-x-4">
                    <div class="w-full">
                        <label class="block text-gray-700 mb-2">Product Name:</label>
                        <input type="text" name="productName" class="block w-full border border-gray-300 rounded p-2" required>
                    </div>
                    <div class="w-full">
                        <label class="block text-gray-700 mb-2">Product Price:</label>
                        <input type="number" name="productPrice" class="block w-full border border-gray-300 rounded p-2" required>
                    </div>
                </div>

                <!-- Discount Price -->
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2">Discount Price:</label>
                    <input type="number" name="discountPrice" class="block w-full border border-gray-300 rounded p-2">
                </div>

                <!-- Panel Details -->
                <h2 class="text-xl font-semibold mb-4">Panel Details</h2>
                <div class="flex mb-4 space-x-4">
                    <div class="w-full">
                        <label class="block text-gray-700 mb-2">Background Color:</label>
                        <input type="color" name="backgroundColor" class="block w-full border border-gray-300 rounded p-2">
                    </div>
                    <div class="w-full">
                        <label class="block text-gray-700 mb-2">Panel Color:</label>
                        <input type="color" name="panelColor" class="block w-full border border-gray-300 rounded p-2">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 mb-2">Text Color:</label>
                    <input type="color" name="textColor" class="block w-full border border-gray-300 rounded p-2">
                </div>

                <!-- Submit Button -->
                <div class="mt-6 text-center">
                    <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Create New Product</button>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
